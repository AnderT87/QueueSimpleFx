<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ec.edu.espoch.queuesimplefx.controller.QueueController">

    
    <!-- HEADER -->
    <top>
        
        <VBox alignment="CENTER" spacing="15" style="-fx-padding: 20; -fx-background-color: #F5F7FA;">
            <children>

                <!-- TITULO -->
                <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Queue Visualizer" />

                <!-- CONTROLES -->
                <HBox alignment="CENTER" spacing="10">
                    <children>

                        <TextField fx:id="txtValues" prefWidth="160" promptText="Ingrese un nÃºmero" />

                        <Button fx:id="Btmenqueue" onAction="#enqueue" style="-fx-background-color: #2D64E0; -fx-text-fill: white;" text="ENQUEUE" />

                        <Button fx:id="Btmdequeue" onAction="#dequeue" style="-fx-background-color: #D9534F; -fx-text-fill: white;" text="DEQUEUE" />

                        <Button fx:id="btmpeek" onAction="#peek" text="PEEK" />

                        <Button fx:id="BtmEmpty" onAction="#isEmptyQueue" text="IS EMPTY" />

                        <Label style="-fx-font-weight: bold;" text="Estado:" />

                        <Label text="---" />

                    </children>
                </HBox>

            </children>
        </VBox>
    </top>

    <!-- AREA DE VISUALIZACION -->
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" BorderPane.alignment="CENTER">
            <content>

                <StackPane fx:id="canvasHolder" prefHeight="200" prefWidth="500" style="-fx-background-color: white;                                   -fx-border-color: #D0D0D0;                                   -fx-border-radius: 6;                                   -fx-background-radius: 6;" />

            </content>
        </ScrollPane>
    </center>

</BorderPane>
